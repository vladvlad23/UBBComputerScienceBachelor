<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane alignment="center" hgap="10" maxHeight="Infinity" maxWidth="Infinity" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <TextField fx:id="numberOfProgramStates" editable="false" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS" />
      <ListView fx:id="listOfProgramStates" prefHeight="200.0" prefWidth="200.0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3" GridPane.vgrow="ALWAYS" />
      <Button fx:id="oneStepForAllButton" alignment="CENTER" mnemonicParsing="false" onAction="#oneStepEvaluate" text="OneStep" GridPane.columnIndex="3" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">
         <font>
            <Font size="17.0" />
         </font>
      </Button>
      <TableView fx:id="heapTable" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3" GridPane.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="heapAddressColumn" editable="false" prefWidth="91.0" text="Address" />
          <TableColumn fx:id="heapValueColumn" editable="false" minWidth="0.0" prefWidth="100.0" text="Value" />
        </columns>
      </TableView>
      <TextField editable="false" text="Program States" GridPane.rowIndex="2" />
      <TextField editable="false" text="Heap Table" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <TextField editable="false" text="Symbol Table" GridPane.columnIndex="2" GridPane.rowIndex="2" />
      <TextField editable="false" text="Exe Stack" GridPane.columnIndex="3" GridPane.rowIndex="2" />
      <TableView fx:id="symbolTable" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="2" GridPane.rowIndex="3">
         <columns>
            <TableColumn fx:id="symbolNameColumn" editable="false" prefWidth="91.0" text="Name" />
            <TableColumn fx:id="symbolValueColumn" editable="false" minWidth="0.0" prefWidth="100.0" text="Value" />
         </columns>
      </TableView>
      <ListView fx:id="executableStack" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="3" GridPane.rowIndex="3" />
      <ListView fx:id="fileTable" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <ListView fx:id="outList" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="2" GridPane.rowIndex="1" />
      <TextField editable="false" text="Total Program States" />
      <TextField editable="false" text="File Table" GridPane.columnIndex="1" />
      <TextField editable="false" text="Out List" GridPane.columnIndex="2" />
      <TextField editable="false" text=":)" GridPane.columnIndex="3" />
      <TextField editable="false" text="CountdownLatch Table" GridPane.columnIndex="4" GridPane.rowIndex="2" />
      <TableView fx:id="countdownLatchTable" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="4" GridPane.rowIndex="3">
         <columns>
            <TableColumn fx:id="countdownLocationColumn" editable="false" prefWidth="91.0" text="Location" />
            <TableColumn fx:id="countdownValueColumn" editable="false" minWidth="0.0" prefWidth="100.0" text="Value" />
         </columns>
      </TableView>
   </children>
   <rowConstraints>
      <RowConstraints percentHeight="10" />
      <RowConstraints percentHeight="10" />
       <RowConstraints percentHeight="10" />
      <RowConstraints percentHeight="60" />
   </rowConstraints>
   <columnConstraints>
      <ColumnConstraints percentWidth="25" />
      <ColumnConstraints percentWidth="25" />
      <ColumnConstraints percentWidth="25" />
      <ColumnConstraints percentWidth="25" />
      <ColumnConstraints minWidth="10.0" percentWidth="25.0" prefWidth="100.0" />
   </columnConstraints>
</GridPane>
